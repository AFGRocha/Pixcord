{
    "name": "Pixcord Closed EN Build",
    "version": "2.0.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [
                "*://*.pixiv.net/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "pixcord-icon.png",
        "48": "pixcord-icon.png",
        "128": "pixcord-icon.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Pixcord"
    },
    "options_page": "options.html",
    "permissions": [
        "storage",
        "tabs"
    ]
}